@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible fade show align-text-center" style="width: 100%">
        <strong>@ViewBag.Message</strong> @ViewBag.MessageDetail
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <script>
                    $(".alert").fadeTo(10000, 1000).slideUp(1000, function(){
                        $(".alert").slideUp(1000);
                    });
    </script>
}
@using (Html.BeginForm("SendSuggestion", "Ajuda", FormMethod.Post, new { style = "width: 100%" }))
{
    <div class="form-group">
        <label for="theName">Nome</label>
        @Html.TextBox("name", null, new { @placeholder = "Nome (opcional)", @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        @Html.TextBox("email", null, new { @placeholder = "E-mail (opcional)", @class = "form-control", @type = "email" })
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Sugestão</label>
        <textarea class="form-control" rows="5" name="suggestion" id="suggestion" placeholder="Sua sugestão"></textarea>
    </div>
    <button type="submit" class="btn search-btn">Enviar</button>
}